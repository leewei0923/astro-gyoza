---
import PageLayout from '@/layouts/PageLayout.astro'
import Highlight from '@/components/Highlight.astro'
---

<style>
  .image-hover {
    cursor: pointer;
  }

  .card-img-1,
  .card-img-2,
  .card-img-3 {
    transition: transform 0.3s ease-in-out;
  }

  .card-show-1 {
    transform: rotate(-10deg);
  }

  .card-show-2 {
    transform: translateX(80px) rotate(15deg);
  }

  .card-show-3 {
    transform: translateX(150px) rotate(15deg);
  }

  .card-hide-1 {
    transform: rotate(0deg);
  }

  .card-hide-2 {
    transform: translateX(0) rotate(0deg);
  }

  .card-hide-3 {
    transform: translateX(0) rotate(0deg);
  }

  .image-hover:hover .card-img-1 {
    transform: rotate(-10deg);
    transition: transform 0.3s ease-in-out;
  }

  .image-hover:hover .card-img-2 {
    transform: translateX(100px) rotate(15deg);
    transition: transform 0.3s ease-in-out;
  }

  .image-hover:hover .card-img-3 {
    transform: translateX(200px) rotate(15deg);
    transition: transform 0.3s ease-in-out;
  }
</style>

<PageLayout title="画廊">
  <div class="max-w-[800px] mx-auto px-4 py-16">
    <header class="space-y-4 mb-8">
      <h1 class="text-4xl font-bold">
        <Highlight>画廊</Highlight>
      </h1>
    </header>

    <div class="grid-cols-1 grid-rows-4 sm:grid-cols-2 sm:grid-rows-2 grid gap-5 overflow-hidden">
      <section class="bg-card rounded-xl pb-24 relative h-full w-full image-hover sm:pb-32">
        <h3
          class="absolute right-2 bottom-2 text-[3rem] text-transparent leading-none font-bold pointer-events-none select-none font-['Atkinson'] whitespace-nowrap"
          style="-webkit-text-stroke: 2px rgb(var(--color-text-primary) / 0.1);"
